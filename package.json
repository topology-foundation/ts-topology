{
  "name": "ts-topology",
  "description": "The official TypeScript implementation of Topology Protocol",
  "version": "0.0.2",
  "license": "MIT",
  "homepage": "https://topology.gg/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/topology-foundation/ts-topology.git"
  },
  "bugs": {
    "url": "https://github.com/topology-foundation/ts-topology/issues"
  },
  "scripts": {
    "release": "release-it",
    "test": "vitest"
  },
  "devDependencies": {
    "@release-it-plugins/workspaces": "^4.2.0",
    "@types/node": "^20.14.2",
    "release-it": "^17.4.1",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "private": true,
  "release-it": {
    "plugins": {
      "@release-it-plugins/workspaces": {
        "publish": false
      }
    },
    "npm": false,
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    }
  }
}
